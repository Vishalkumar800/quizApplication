<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_12sdp"
    tools:context=".activty.QuizjavaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/question_indiactor_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 7/20"
            android:textSize="@dimen/_18sdp"
            android:layout_centerVertical="true"
           style="@style/stylewala"/>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/timer"
            app:tint="@color/blue"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toStartOf="@+id/time_indiactor_textview"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/time_indiactor_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:45"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_18sdp"/>

    </RelativeLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
       android:id="@+id/quizquestion_progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:progress="60"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_14sdp">

            <TextView
                android:id="@+id/question_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@drawable/quiz_card_bg"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="What is Android Os? "
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/cardcolor"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:layout_marginVertical="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Ans A" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/cardcolor"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:layout_marginVertical="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Ans B" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/cardcolor"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:layout_marginVertical="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Ans C" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/cardcolor"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:layout_marginVertical="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Ans D" />

           <Button
               android:id="@+id/nextButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="end"
               android:text="Next"
               android:textSize="@dimen/_18sdp"
               android:background="@drawable/button_bg"
               android:paddingHorizontal="@dimen/_16sdp"
               android:layout_marginVertical="@dimen/_5sdp"
              />

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/adsUnitId">

            </com.google.android.gms.ads.AdView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>