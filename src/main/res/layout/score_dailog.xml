<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <TextView
        android:id="@+id/scoreTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/stylewala"
        android:textSize="@dimen/_20sdp"
        android:text="Congrats! You have passed"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp">

        <com.google.android.material.progressindicator.CircularProgressIndicator
           android:id="@+id/score_progress_indiactor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:trackColor="@color/cardcolor"
            android:progress="60"
            app:indicatorColor="@color/orange"
            app:trackCornerRadius="@dimen/_20sdp"
            app:trackThickness="@dimen/_8sdp"
            app:indicatorSize="@dimen/_90sdp"/>

        <TextView
            android:id="@+id/score_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:layout_marginVertical="@dimen/_4sdp"
            android:textSize="@dimen/_18sdp"
            android:layout_centerInParent="true"
            style="@style/stylewala"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/score_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="6 out of 10 questions are Correct"/>

    <Button
        android:id="@+id/finishBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:textStyle="bold"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_margin="@dimen/_8sdp"
        android:backgroundTint="@color/orange"
        />


</LinearLayout>